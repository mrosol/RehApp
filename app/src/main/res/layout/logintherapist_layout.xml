<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1EEF0"
        tools:context=".LoginTherapist">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="276dp" app:srcCompat="@drawable/fizjo"
            android:id="@+id/imageView3" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="TERAPEUTA"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:id="@+id/therapeutTextView"
            app:layout_constraintTop_toTopOf="@+id/imageView3" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="false" android:textAlignment="center"
            android:textSize="36sp" android:textStyle="bold" android:layout_marginTop="144dp"
            android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/emailTextView" android:layout_marginEnd="32dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="100dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/emailTextView"/>
    <Button
            android:text="zaloguj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/passwordTextView"/>
    <TextView
            android:text="E-MAIL:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/emailTW" app:layout_constraintEnd_toStartOf="@+id/emailTextView"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" app:layout_constraintHorizontal_bias="0.512"
            android:textSize="18sp"/>
    <TextView
            android:text="HASŁO:"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/passwordTW" app:layout_constraintEnd_toStartOf="@+id/passwordTextView"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/emailTW"
            android:layout_marginTop="44dp" app:layout_constraintHorizontal_bias="0.459" android:textSize="18sp"/>

</android.support.constraint.ConstraintLayout>