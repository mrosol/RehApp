<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E1EEF0"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp" app:srcCompat="@drawable/fizjo"
            android:id="@+id/therapistImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="350dp" app:srcCompat="@drawable/dzieci"
            android:id="@+id/patientImageView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/therapistImageView" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="TERAPEUTA"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:id="@+id/therapistTextView"
            app:layout_constraintTop_toTopOf="@+id/therapistImageView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="false" android:textAlignment="center"
            android:textSize="36sp" android:textStyle="bold" android:layout_marginTop="144dp"
            android:textColor="@android:color/black"/>
    <TextView
            android:text="PACJENT"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/patientLogTextView" app:layout_constraintEnd_toEndOf="@+id/patientImageView"
            app:layout_constraintStart_toStartOf="@+id/patientImageView" android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/patientImageView" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/patientImageView" android:focusable="false" android:textStyle="bold"
            android:textSize="36sp" android:textAlignment="center" android:textColor="@android:color/black"/>
</android.support.constraint.ConstraintLayout>