<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E1EEF0"
        tools:context=".LoginTherapist">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="276dp" app:srcCompat="@drawable/dzieci"
            android:id="@+id/imageView4" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="1.0"/>
    <TextView
            android:text="Pacjent"
            android:layout_width="421dp"
            android:layout_height="wrap_content"
            android:id="@+id/patienLogTextView"
            app:layout_constraintTop_toTopOf="@+id/imageView4" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:focusable="false" android:textAlignment="center"
            android:textSize="36sp" android:textStyle="bold" android:layout_marginTop="144dp"
            android:textColor="@android:color/black"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/patientLoginTextView" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="zaloguj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loginPatientButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/patientLoginTextView"
            app:layout_constraintHorizontal_bias="0.498"/>
    <TextView
            android:text="IMIÄ˜ I NAZWISKO:"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/namePatientLoginTextView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/patientLoginTextView"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/imageView4" android:textSize="22sp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="1.0"
            android:textAlignment="center"/>


</android.support.constraint.ConstraintLayout>